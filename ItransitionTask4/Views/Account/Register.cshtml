@model ItransitionTask4.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registration";
    Layout = "_Layout";
}

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <fieldset>
        <legend>Registration</legend>
        <div>
            <label class="form-label mt-4" asp-for="Name">Type your name</label><br/>
            <input class="form-control" type="text" asp-for="Name"/>
            <span asp-validation-for="Name"/>
        </div>
        <div>
            <label class="form-label mt-4" asp-for="Email">Type your email</label><br/>
            <input class="form-control" type="text" asp-for="Email"/>
            <span asp-validation-for="Email"/>
        </div>
        <div>
            <label class="form-label mt-4" asp-for="Password">Type your password</label><br/>
            <input class="form-control" asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <br/>
        <div>
            <button class="btn btn-primary" type="submit">Register</button>
            <span>or</span>
            <a asp-action="Login">Login</a>
        </div>
    </fieldset>
</form>